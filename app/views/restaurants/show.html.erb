<h1><%= @restaurant.name %></h1>
<%num = 0 %>
<% @restaurant.reviews.each_with_index do |review, index| %>
  <p><%= "#{index+1}. #{review.content}" %></p>
<% end %>

<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>


<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back to the list', restaurants_path(@restaurant) %>
